<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <!-- Define arguments -->
  <arg name="world" 		default="empty"/> 
  <arg name="paused" 		default="false"/>
  <arg name="use_sim_time" 	default="true"/>
  <arg name="gui" 		default="true"/>
  <arg name="headless" 		default="false"/>
  <arg name="debug" 		default="false"/>
  <arg name="mode"		default="common_models"/>
  
  <!-- Load the world environment -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" 		value="$(find sim_world)/worlds/desert.world"/>
    <arg name="paused" 			value="$(arg paused)"/>
    <arg name="use_sim_time"   		value="$(arg use_sim_time)"/>
    <arg name="gui" 			value="$(arg gui)"/>
    <arg name="headless" 		value="$(arg headless)"/>
    <arg name="debug" 			value="$(arg debug)"/>
  </include>

  <!-- This command builds the urdf files from the xacro files by calling the launch file -->
  <param name="$(arg mode)_description" command="$(find xacro)/xacro --inorder '$(find sim_world)/models/$(arg mode)/$(arg mode).xacro'"/>

  
  <!-- Spawn the robot after we built the urdf files -->
  <node name="$(arg mode)_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
   args="-urdf -param $(arg mode)_description -model $(arg mode)_mode" />
   
  <!-- Publish the Transformations -->
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" >
    <remap from="robot_description" to="$(arg mode)_description" />
  </node>
  

</launch>
